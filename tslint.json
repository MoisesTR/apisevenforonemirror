{
    "extends": ["tslint:recommended", "tslint-config-prettier"],
    "linterOptions": {
        "exclude": ["node_modules/*", "public/*", "*.json", "**/*.json"],
        "include": ["src"]
    },
    "rulesDirectory": ["tslint-plugin-prettier"],
    "rules": {
        "no-use-before-declare": false,
        "class-name": true,
        "forin": true,
        "label-position": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-console": false,
        "no-construct": false,
        "no-constructor-vars": false,
        "no-debugger": true,
        "no-duplicate-variable": true,
        "no-empty": true,
        "no-eval": true,
        "no-string-literal": true,
        "no-switch-case-fall-through": true,
        "no-unused-expression": true,
        "triple-equals": [true, "allow-null-check"],
        "variable-name": [true, "allow-snake-case", "allow-trailing-underscore", "allow-leading-underscore", "ban-keywords"],
        "prefer-const": true,
        "prettier": true,
        "object-literal-sort-keys": {
            "severity": "warn"
        },
        "ordered-imports": {
            "severity": "off"
        },
        "only-arrow-functions": false
    }
}
